{
  "name": "budMan",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.yourcompany.yourapp",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "extraFiles": [
      {
        "from": "backend",
        "to": "laravel-app",
        "filter": ["**/*"]
      },
      {
        "from": "frontend",
        "to": "next-app",
        "filter": ["**/*"]
      }
    ]
  }
}